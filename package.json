{
    "name": "nextron-boilerplate",
    "productName": "Nextron Boilerplate",
    "version": "1.0.0",
    "description": "A Nextron & BiomeJS boilerplate entirely configured to suit my standards.",
    "repository": "https://github.com/yoratoni/nextron-boilerplate",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "main": "app/background.js",
    "scripts": {
        "v-bump": "yarn version --patch",
        "dev": "nextron",
        "build": "nextron build --config ./configs/electron-builder.yml",
        "postinstall": "electron-builder install-app-deps",
        "lint": "biome lint .",
        "lint:fix": "biome lint . --apply",
        "format": "biome format .",
        "format:fix": "biome format --write .",
        "check-types": "tsc --noEmit --skipLibCheck --incremental false"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "next": "^14.2.7",
        "systeminformation": "^5.23.5",
        "tailwind-merge": "^2.5.2",
        "tailwindcss": "^3.4.10",
        "tailwindcss-animate": "^1.0.7",
        "webpack": "^5.94.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.3",
        "@iconify/react": "^5.0.2",
        "@types/node": "^22.5.1",
        "@types/react": "^18.3.5",
        "autoprefixer": "^10.4.20",
        "electron": "^32.0.1",
        "electron-builder": "^24.13.3",
        "electron-builder-squirrel-windows": "^24.13.3",
        "electron-serve": "^2.1.0",
        "electron-store": "^10.0.0",
        "nextron": "^9.1.0",
        "postcss": "^8.4.41",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4",
        "winston": "^3.14.2"
    }
}