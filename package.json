{
    "name": "nextron-boilerplate",
    "productName": "Nextron Boilerplate",
    "version": "1.0.0",
    "description": "A Nextron & EsLint boilerplate entirely configured to suit my standards.",
    "repository": "https://github.com/yoratoni/nextron-boilerplate",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "main": "app/background.js",
    "scripts": {
        "v-bump": "yarn version --patch",
        "dev": "nextron",
        "build": "nextron build --config ./configs/electron-builder.yml",
        "postinstall": "electron-builder install-app-deps",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --fix",
        "check-types": "tsc --noEmit --skipLibCheck --incremental false"
    },
    "dependencies": {
        "electron-serve": "^1.3.0",
        "electron-store": "^8.2.0",
        "next": "^14.2.0",
        "systeminformation": "^5.22.7",
        "tailwindcss-animate": "^1.0.7",
        "webpack": "^5.91.0"
    },
    "devDependencies": {
        "@iconify/react": "^4.1.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^20.12.7",
        "@types/react": "^18.2.77",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "autoprefixer": "^10.4.19",
        "electron": "^29.3.0",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-config-next": "^14.2.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-react": "^7.34.1",
        "nextron": "^8.13.0",
        "postcss": "^8.4.38",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5",
        "winston": "^3.13.0"
    }
}