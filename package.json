{
    "name": "nextron-boilerplate",
    "version": "1.0.0",
    "description": "A Nextron & EsLint boilerplate entirely configured to suit my standards.",
    "repository": "https://github.com/yoratoni/nextron-boilerplate",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "main": "app/background.js",
    "scripts": {
        "v-bump": "yarn version --patch",
        "dev": "nextron",
        "build": "nextron build --config ./configs/electron-builder.yml",
        "postinstall": "electron-builder install-app-deps",
        "lint": "eslint . --ext .ts,.tsx",
         "check-types": "tsc --noEmit --skipLibCheck --incremental false"
    },
    "dependencies": {
        "electron-serve": "^1.1.0",
        "electron-store": "^8.1.0",
        "systeminformation": "^5.22.6",
        "tailwindcss-animate": "^1.0.7",
        "webpack": "^5.89.0"
    },
    "devDependencies": {
        "@iconify/react": "^4.1.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.26",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "autoprefixer": "^10.4.16",
        "electron": "^26.2.2",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-config-next": "^14.1.4",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-react": "^7.34.1",
        "next": "^14.1.4",
        "nextron": "^8.12.0",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.6",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.3"
    }
